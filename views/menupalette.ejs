                    </div>
                </div>
            </div>
            <div class="check-validation">
                <i class="fa-solid fa-check"></i>
            </div>
        </div>
    </section>

    <section class="menu menu-1 fade">
        <h2>PLATS</h2>
        <span class="spacer">

        </span>
        <div class="block_menu">
            <div class="block_anime">
